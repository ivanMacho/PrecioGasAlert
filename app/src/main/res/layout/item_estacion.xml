<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/retro_dark_black"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textNombreEstacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="@color/retro_green"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textPrecioEstacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="@color/retro_cyan"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textDistanciaEstacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distancia"
            android:textColor="@color/retro_yellow"
            android:textSize="15sp"
            android:fontFamily="monospace"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 